@page
@model TeamProject.Pages.Admin.Films.CreateModel
@{
}

<form method="post" enctype="multipart/form-data">
<div class="border p-3 mt-4">
    <div class="row pb-2">
         <h2 class="text-primary pl-3">Create New Film</h2>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Film.FilmName"></label>
        <input asp-for="@Model.Film.FilmName" class="form-control"/>
        <span asp-validation-for="@Model.Film.FilmName" class="text-danger"></span>
    </div>
        <div class="mb-3">
            <label asp-for="@Model.Film.Description"></label>
            <input asp-for="@Model.Film.Description" class="form-control" />
            <span asp-validation-for="@Model.Film.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Film.Duration"></label>
            <input asp-for="@Model.Film.Duration" class="form-control" />
            <span asp-validation-for="@Model.Film.Duration" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Film.ageRating"></label>
            <input asp-for="@Model.Film.ageRating" class="form-control" />
            <span asp-validation-for="@Model.Film.ageRating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Film.Trailer"></label>
            <input asp-for="@Model.Film.Trailer" class="form-control" />
            <span asp-validation-for="@Model.Film.Trailer" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Film.ImageName">FileUpload</label>
            <input type="file" name="files" id="upLoadBox" class="form-control" />
        </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>

</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
     }
} 