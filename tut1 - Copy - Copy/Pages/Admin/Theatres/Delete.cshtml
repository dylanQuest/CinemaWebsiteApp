@page
@model TeamProject.Pages.Admin.Theatres.DeleteModel
@{
}

<form method="post">
<input hidden asp-for="Theatre.Id"/>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3 text-light">Delete Theatre</h2>
    </div>

        <div class="mb-3">
            <label asp-for="@Model.Theatre.TheatreNum">Theatre Number</label>
            <input asp-for="@Model.Theatre.TheatreNum" min="0" class="form-control" readonly>
            <span asp-validation-for="@Model.Theatre.TheatreNum" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Theatre.Capacity"></label>
            <input asp-for="@Model.Theatre.Capacity" min="0" class="form-control" readonly />
            <span asp-validation-for="@Model.Theatre.Capacity" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}
