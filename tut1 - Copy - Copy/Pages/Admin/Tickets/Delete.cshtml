@page
@model TeamProject.Pages.Admin.Tickets.DeleteModel
@{
}

<form method="post">
<input hidden asp-for="Ticket.Id"/>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3 text-light">Delete Ticket</h2>
    </div>

        <div class="mb-3">
            <label asp-for="@Model.Ticket.bookingId">Booking</label>
            <input asp-for="@Model.Ticket.bookingId" class="form-control" />
            <span asp-validation-for="@Model.Ticket.bookingId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Ticket.typeId">Type</label>
            <input asp-for="@Model.Ticket.typeId" class="form-control" />
            <span asp-validation-for="@Model.Ticket.typeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Ticket.screeningId">Screening</label>
            <input asp-for="@Model.Ticket.screeningId" class="form-control" />
            <span asp-validation-for="@Model.Ticket.screeningId" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}
