@page
@model TeamProject.Pages.Admin.Screenings.CreateModel
@{
}

<form method="post">
<div class="border p-3 mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row pb-2">
         <h2 class="text-primary pl-3 text-light">Create New Screening</h2>
    </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.filmId">Film</label>
            <select asp-for="@Model.Screening.filmId" asp-items="@Model.FilmList" required="required" class="form-control">
                <option value=""> -- Select Film --</option>
            </select>
            <span asp-validation-for="@Model.Screening.filmId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.theatreId">Theatre</label>
            <select asp-for="@Model.Screening.theatreId" asp-items="@Model.TheatreList" required="required" class="form-control">
                <option value=""> -- Select Theatre -- </option>
            </select>
            <span asp-validation-for="@Model.Screening.theatreId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.Date"></label>
            <input asp-for="@Model.Screening.Date" class="form-control" required="required" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
            <span asp-validation-for="@Model.Screening.Date" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
</div>
</form>
@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
     }
} 