@page
@model TeamProject.Pages.Customer.Home.IndexModel
@{
}
<div class="row container pb-3 backgroundWhite">

	<div class="row container pb-3 backgroundWhite">
		<p>
			<form class="d-flex" class="col-3">
				<input type="text" placeholder="Enter Film Name" class="form-control me-sm-2" asp-for="SearchString" />
				<input type="submit" value="Search" class="btn btn-outline" class="form-control align-content-end" />
				<a asp-route-Products="" asp-route-SearchString="" class="btn btn-outline-secondary">Clear</a>
			</form>
		</p>
	</div>

	<div class="col-12">
	<div class="row my-3">
	@foreach (var Film in Model.listOfFilms)
	{
				<div class="col-lg-4 col-md-6 pb-4 filter">
		<h2 class="text-success pl-1"><b>@Film.FilmName</b></h2>
		<div class="col-12">
			<div class="row my-3">
					
						<div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
							<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Film.ImageName" alt="menuitem image">
							<div class="card-body p-1 px-3 row">
								<div class="col-12 p-1">
									<a asp-page="Details" asp-route-id="@Film.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
								</div>
							</div>
						</div>
					
			</div>
		</div>
		</div>
	}
	</div>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}

