@page
@model tut1.Pages.Customer.Home.OrderModel
@{
    <div class="">
		<form method="post" enctype="multipart/form-data">
			<input asp-for="Film.Id" hidden />

            <div class="container backgroundWhite">
                <div class="card">
                    <div class="card-header">
						<div class="text-light ml-0 row justify-content-center">
							<div class="col-12 col-md-6 pt-2 d-flex justify-content-center">
                                <h1 class="text-primary text-light">@Model.Film.FilmName</h1>
                            </div>
                        </div>
                    </div>
					@foreach (var Screening in Model.listOfScreenings)
					{
						<div class="container rounded p-2">
							<div class="row justify-content-center">
								<div class="col-12 col">
									<h1 class="text-primary text-light">Seats Remaining: @Screening.seatsRemaining</h1>
									<h2 class="text-success pl-1"><b>@Screening.Date</b></h2>
									<div class="col-12 col-md-6 ">
										<a asp-page="Book" asp-route-screeningId="@Screening.Id" button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Book</a>
									</div>
								</div>
							</div>
						</div>	
					}
                    <div class="card-footer">
						<div class="row justify-content-center">
							<div class="col-12 col-md-6 pb-1 d-flex justify-content-center">
								<a asp-page="Index" class="btn btn-success btn-square form-control" style="height:50px;">Back to Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
