@page
@model tut1.Pages.RegisterModel
<form method="post">
	<div class="border p-3 mt-4">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="row pb-2">
			<h2 class="text-primary text-light pl-3">
				Register
			</h2>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Register.Passcode">Passcode</label>
			<input asp-for="@Model.Register.Passcode" class="form-control" />
			<span asp-validation-for="Register.Passcode" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Register.EmailAddress">Email Address</label>
			<input asp-for="@Model.Register.EmailAddress" class="form-control" />
			<span asp-validation-for="Register.EmailAddress" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Register.Password"></label>
			<input asp-for="@Model.Register.Password" class="form-control" />
			<span asp-validation-for="Register.Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Register.ConfirmPassword">Confirm Password</label>
			<input asp-for="@Model.Register.ConfirmPassword" class="form-control" />
			<span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Register</button>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_validationScriptsPartial" />
	}
}
